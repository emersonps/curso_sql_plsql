--SEQUENCE - OUTROS OBJETOS DO BANCO

CREATE SEQUENCE SEQ_ALUNO1
START WITH 60
--valor inicial
INCREMENT BY 5
--Qtde a Incrementar
MINVALUE 60
--Valor Mínimo
MAXVALUE 250
--Valor Máximo
NOCACHE
--Não guarda em cache faixa de valores -- PADRÃO É 20
NOCYCLE;
--QUANDO CHEGAR EM 250 ELE VOLTARIA PRA 60, MAS NÃO FARÁ.
--USO RARO

INSERT INTO TALUNO (COD_ALUNO, NOME)
VALUES (SEQ_ALUNO1.NEXTVAL,'MASTER TRAINING');

INSERT INTO TALUNO (COD_ALUNO, NOME)
VALUES (SEQ_ALUNO1.NEXTVAL,'MASTER TRAINING 2');

SELECT * FROM TALUNO;

SELECT * FROM USER_SEQUENCES;
--EXIBE A TABELA COM SEQUENCES DO USUARIO

--VALOR ATUAL DA SEQUENCE
SELECT SEQ_ALUNO1.CURRVAL FROM DUAL;

--ALTERAR SEQUENCE
ALTER SEQUENCE SEQ_ALUNO1 MAXVALUE 500;
ALTER SEQUENCE SEQ_ALUNO1 INCREMENT BY 2;

--ALTERAR VALOR DA SEQUENCIA
--APAGA
DROP SEQUENCE SEQ_ALUNO1;
--CRIA NOVAMENTE
CREATE SEQUENCE SEQ_ALUNO1 START WITH 80;

--CONTINUAR 29/06/2018

--Índices Secundários
--Uma chave primária é considerada Índice Primário
--Índice secudário, atuam com uma melhor performance de maneira igual.

SELECT NOME FROM TALUNO
WHERE NOME LIKE '%A%'; --F9 - MOSTRA O PLANO DE EXECUÇÃO PRA ESSE SELECT. (EXPLAIN PLAN)
                       --No status veremos que ele faz uma busca FULL TABLE.

--CRIANDO O INDICE PRA COLUNA NOME
CREATE INDEX IND_TALUNO_NOME1 ON TALUNO(NOME); --Ao criar o Index e sexecutar o select anterior, veremos que agora a performance melhor, ele faz uma seleção FULL SCAN.

SELECT NOME, CIDADE FROM TALUNO
WHERE NOME LIKE '%A%' AND CIDADE LIKE '%A%';

CREATE INDEX IND_TALUNO_NOMECIDADE ON TALUNO(NOME, CIDADE); --COST(CUSTO=1)

--INDICE - PERFORMANCE DE PESQUISA
--OBS.: UM INDICE PRA TODAS AS COLUNAS AS PESQUISAM SERÃO EXCELENTES, POREM O INSERT, UPDATE E DELETE SERÃO MAIS DEMORADOS, POIS PRECISARÁ ATUALIZAR OS INDICES DE PESQUISA.

--TABELA DE INDICES
SELECT * FROM USER_INDEXES;

--APAGAR INDICES
DROP INDEX NOME_DO_INDICE;

--SINONIMOS
--CRIAR UM 'APELIDO', OU SEJA, SINONIMO PARA UMA TABELA
CREATE SYNONYM ALU FOR TALUNO;

SELECT * FROM ALU;




